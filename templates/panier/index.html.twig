<td></td>
</tfoot>
</table>

{% else %}
<p>Votre panier est vide</p>
{% endif %}

<button type="button" class="btn btn-primary">Payer {{ total }}</button>


<a href="{{ path('portable') }}" class="btn btn-danger btn-sm">retour</a>

{% endblock %}
