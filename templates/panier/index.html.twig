{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<div class="bg-light p-3">
<h1>Votre panier</h1>
</div>

{% if items | length > 0 %}

<table class="table">
<thead>
<tr>
<th>Produit</th>
<th>Prix</th>
<th>Quantit√©</th>
<th>Total</th>
<th></th>
</tr>
</thead>
<tbody>
{% for item in items %}
<tr>
<td>{{ item.product.marque }}</td>

<td>
<a href="{{ path('panier_supprime', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
supprimer
</a>
</td>
</tr>
{% endfor %}
</tbody>
<tfoot>
<td colspan="3" class="text-right">Total :</td>
